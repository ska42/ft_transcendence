<p id="notice"><%= notice %></p>

<%= link_to raw("Invitations (<b>" + current_user.receive_invites.where(state: "waiting").count.to_s + "</b>)"), invitations_guilds_path %>


<h1>Guilds</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Points</th>
      <th>Anagram</th>
      <th>Owner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @guilds.each do |guild| %>
      <tr>
        <td><%= guild.name %></td>
        <td><%= guild.points %></td>
        <td><%= guild.anagram %></td>
        <td><%= guild.owner.nickname %></td>
        <td><%= link_to 'Show', guild %></td>
		<% if guild.owner == current_user %>
			<td><%= link_to 'Edit', edit_guild_path(guild) %></td>
			<td><%= link_to 'Destroy', guild, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		<% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Guild', new_guild_path %>
