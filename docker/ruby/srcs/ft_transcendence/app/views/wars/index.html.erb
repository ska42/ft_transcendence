<p id="notice"><%= notice %></p>

<h1>Wars</h1>

<table>
	<thead>
		<tr>
			<th>Guild 1</th>
			<th>Guild 2</th>
			<th>Points to win</th>
			<th>State</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @wars.each do |war| %>
			<tr>
				<td><%= link_to war.guild1.name, war.guild1 %></td>
				<td><%= link_to war.guild2.name, war.guild2 %></td>
				<td><%= war.points_to_win %></td>
				<td><%= war.state %></td>
				<td><%= link_to 'Show', war %></td>
				<% if war.guild1.officers.include?(current_user) and war.state == "waiting for war times" %>
					<td><%= link_to 'Abort', war_path(war), method: :delete, data: { confirm: 'Are you sure?' }, remote: true %></td>
				<% end %>
			</tr>
		<% end %>
	</tbody>
</table>

<br>

<%= link_to 'New War', new_war_path if ready_for_war %>
