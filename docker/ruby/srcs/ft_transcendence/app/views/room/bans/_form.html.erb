<%= form_with(model: room_ban, remote: true) do |form| %>
	<div class="field">
		<%= form.label :user_id %>
		<%= form.collection_select :user_id, @room.members - @room.admins, :id, :nickname %>
		<%= form.error_for :user_id %>
	</div>

	<div class="field">
		<%= form.label :end_at %>
		<%= form.datetime_select :end_at %>
		<%= form.error_for :end_at %>
		<h6><b>WARNING:</b> This DateTime is in UTC (-<%= DateTime.now.utc_offset / 1.hours %>h)</h6>
	</div>

	<div class="actions">
		<%= form.submit %>
	</div>
<% end %>
